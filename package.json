{
  "name": "nextjs-figma-playwright-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "diagnostic": "node .claude/examples/next-app-setup.js",
    "verify-layout": "node tools/compare-figma-layout.js",
    "verify-layout:debug": "node tools/compare-figma-layout.js --debug",
    "verify-styles": "node verify-styles.js",
    "test:design-system": "npm run verify-styles && playwright test",
    "test:layout": "npm run verify-layout && playwright test",
    "dev:verified": "npm run verify-styles && next dev",
    "test:full": "npm run verify-styles && npm run verify-layout && playwright test"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@types/eslint": "^9",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.5.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
